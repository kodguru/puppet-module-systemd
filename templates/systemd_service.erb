[Unit]
<% if @unit_description -%>
Description=<%= @unit_description %>
<% end -%>
<% if @unit_after -%>
After=<%= @unit_after %>
<% end -%>
<% if @unit_before -%>
Before=<%= @unit_before %>
<% end -%>
<% if @unit_requires -%>
Requires=<%= @unit_requires %>
<% end -%>

[Service]
Type=<%= @service_type %>
<% if @service_timeoutstartsec -%>
TimeoutStartSec=<%= @service_timeoutstartsec %>
<% end -%>
<% if @service_restart -%>
Restart=<% @service_restart %>
<% end -%>
<% if @service_restartsec -%>
RestartSec=<% @service_restartsec %>
<% end -%>
<% if @workingdirectory -%>
WorkingDirectory=<%= @workingdirectory %>
<% end -%>
<% if @environment -%>
Environment="<%= @environment %>"
<% end -%>
<% if @user -%>
User=<%= @user %>
<% end -%>
<% if @group -%>
Group=<%= @group %>
<% end -%>
<% if @service_execstartpre -%>
<% @service_execstartpre.each do |e| -%>
ExecStartPre=<%= e %>
<% end -%>
<% end -%>
<% if @service_execstart -%>
ExecStart=<%= @service_execstart %>
<% end -%>
<% if @service_execstop -%>
ExecStop=<%= @service_execstop %>
<% end -%>

[Install]
<% if @install_wantedby -%>
WantedBy=<%= @install_wantedby %>
<% end -%>
